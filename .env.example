# Environment Configuration for Strategy Selection
# 
# Copy this file to .env and configure as needed

# ======================
# STRATEGY SELECTION
# ======================

# Default execution strategy when not specified
# Options: traditional, compiled, auto
DEFAULT_STRATEGY=traditional

# Enable automatic strategy switching based on request complexity
# Options: true, false
AUTO_STRATEGY=false

# ======================
# PERFORMANCE TUNING
# ======================

# Cache size for compiled strategy (number of agents to cache)
COMPILED_CACHE_SIZE=50

# Complexity threshold for auto-switching (1-10)
# Requests with complexity > this value will use compiled strategy
COMPLEXITY_THRESHOLD=7

# ======================
# LOGGING AND MONITORING
# ======================

# Log strategy selection decisions
# Options: true, false
LOG_STRATEGY_SELECTION=true

# Log performance metrics
# Options: true, false
LOG_PERFORMANCE_METRICS=true

# ======================
# ENVIRONMENT EXAMPLES
# ======================

# Development Environment (traditional for easier debugging)
# DEFAULT_STRATEGY=traditional
# AUTO_STRATEGY=false
# LOG_STRATEGY_SELECTION=true

# Production Environment (compiled for better performance)
# DEFAULT_STRATEGY=compiled
# AUTO_STRATEGY=true
# COMPLEXITY_THRESHOLD=5
# LOG_STRATEGY_SELECTION=false

# Testing Environment (auto for comprehensive testing)
# DEFAULT_STRATEGY=auto
# AUTO_STRATEGY=true
# COMPLEXITY_THRESHOLD=3
# LOG_STRATEGY_SELECTION=true
# LOG_PERFORMANCE_METRICS=true